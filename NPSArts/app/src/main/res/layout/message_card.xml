<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginBottom="10dp"
    android:layout_width="match_parent"
    app:cardBackgroundColor="#fff"
    app:cardMaxElevation="2dp"
    app:cardCornerRadius="0dp"
    app:cardElevation="2dp"
    android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/row"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:id="@+id/photoHolder"
                android:scaleType="fitXY"
                android:layout_weight="1"
                />

             <RelativeLayout
                 android:layout_weight="1"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content">

                 <ImageView
                     android:layout_width="40dp"
                     android:layout_height="18dp"
                     android:layout_marginTop="10dp"
                     android:layout_alignParentEnd="true"
                     android:layout_marginEnd="10dp"
                     android:visibility="gone"
                     android:id="@+id/showOptionsFromDot"
                     android:src="@drawable/dotoption"
                     />

                 <TextView
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:layout_marginStart="5dp"
                     android:layout_below="@id/showOptionsFromDot"
                     android:textSize="22sp"
                     android:padding="5dp"
                     android:textColor="#000"
                     android:id="@+id/holdNameInAbout"
                     />

                 <TextView
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:layout_marginStart="5dp"
                     android:textSize="16sp"
                     android:paddingEnd="5dp"
                     android:layout_marginTop="5dp"
                     android:paddingStart="5dp"
                     android:maxLines="5"
                     android:ellipsize="end"
                     android:textColor="#000"
                     android:layout_below="@id/holdNameInAbout"
                     android:id="@+id/holdDesInAbout"
                     />

             </RelativeLayout>
        </LinearLayout>
</androidx.cardview.widget.CardView>