<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_marginBottom="5dp"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#fff"
        app:cardMaxElevation="2dp"
        app:cardElevation="2dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:id="@+id/one"
                android:layout_height="wrap_content">
            <com.mikhaellopez.circularimageview.CircularImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/profile"
                android:layout_centerHorizontal="true"
                 android:id="@+id/holdeProfileInMagageAccount"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/holdeProfileInMagageAccount"
                android:layout_alignRight="@id/holdeProfileInMagageAccount"
                android:text="0 post"
                android:layout_centerInParent="true"
                android:textAlignment="center"
                android:layout_alignLeft="@id/holdeProfileInMagageAccount"
                android:textStyle="bold"
                android:textSize="12sp"
                android:padding="2dp"
                android:id="@+id/holdsNoofPost"
                android:background="@drawable/back_no_post"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/holdsNoofPost"
                android:text="Avinash Yadav"
                android:textAlignment="center"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:textSize="15sp"
                android:id="@+id/setNameInManageAccount"
                /></RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/two"
                android:gravity="center"
                android:layout_below="@id/one"
               android:paddingBottom="10dp"
                >
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/verificationButton"
                android:layout_marginTop="5dp"
                 />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:text="Not Verified"
                android:textSize="12sp"
                android:gravity="center"
                android:layout_alignTop="@id/verificationButton"
                android:layout_alignBottom="@id/verificationButton"
                android:layout_toEndOf="@id/verificationButton"
                android:id="@+id/verifyHeading"
                />
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/generalPermissionButton"
                android:layout_below="@id/verificationButton"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#000"
                android:layout_toEndOf="@id/generalPermissionButton"
                android:text="No Permission"
                android:layout_alignTop="@id/generalPermissionButton"
                android:textSize="12sp"
                android:layout_alignBottom="@id/generalPermissionButton"
                android:id="@+id/permissionHeading"
                />
            </RelativeLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>