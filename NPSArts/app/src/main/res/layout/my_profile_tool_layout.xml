<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="My Profile"
        android:id="@+id/myprofileheading"
        android:textAlignment="center"
        android:textSize="22sp"
        android:textColor="#000"
        />
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="15dp"
        android:id="@+id/complainBox"
        android:visibility="gone"
        android:layout_alignParentStart="true"
        android:src="@drawable/complainimage"
        />
    <ImageView
        android:layout_width="30dp"
        android:layout_height="25dp"
        android:layout_toStartOf="@id/openAbout"
        android:layout_marginEnd="10dp"
        android:id="@+id/pendingopen"
        android:src="@drawable/comppending"
        />
    <ImageView
        android:layout_width="30dp"
        android:layout_height="27dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:id="@+id/openAbout"
        android:src="@drawable/amb"
        />

</RelativeLayout>