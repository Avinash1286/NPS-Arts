<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#37000000"
    android:layout_height="match_parent"
    tools:context=".ShowNotVerifiedMessage">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_height="wrap_content"
        android:id="@+id/showNotVerifiedcard"
        app:cardElevation="2dp"
        android:layout_centerInParent="true"
        app:cardMaxElevation="2dp"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="#fff">
        <RelativeLayout
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/notVerifiedText"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:padding="5dp"
            android:textSize="20sp"
            android:textAlignment="center"
            android:textColor="#000"
            android:layout_marginTop="10dp"
            android:text="Sorry you can't create a post,you are not a verified user"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/notVerifiedText"
            android:text="Suggestion :"
            android:textColor="#000"
            android:textSize="15sp"
            android:layout_marginStart="10dp"
            android:padding="5dp"
            android:id="@+id/suggestionText"
            />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/notVerifiedText"
                android:text="Ask with admin user(Ramnath sir) to verify your account"
                android:textColor="#000"
                android:padding="5dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@id/suggestionText"
                android:textSize="15sp"
                android:id="@+id/actualSuggestion"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/actualSuggestion"
                android:layout_marginTop="5dp"
                android:text="OK"
                android:id="@+id/okbutton"
                android:layout_marginBottom="20dp"
                android:textAlignment="center"
                android:textSize="35sp"
                android:textColor="#000"
                />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>


</RelativeLayout>